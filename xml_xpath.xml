def _get_first_check_in_of_day(self, employee, date):
    start = datetime.combine(date, time.min)
    end = datetime.combine(date, time.max)

    return self.search([
        ('employee_id', '=', employee.id),
        ('check_in', '>=', start),
        ('check_in', '<=', end),
    ], order='check_in asc', limit=1)

