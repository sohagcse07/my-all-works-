@api.depends('check_in', 'employee_id')
def _compute_is_late(self):
    for rec in self:
        if not rec.employee_id or not rec.check_in:
            rec.is_late = False
            continue

        check_in_bd = rec._to_bangladesh_time(rec.check_in)
        current_date = check_in_bd.date()

        # First check-in of the day
        first_attendance = rec._get_first_check_in_of_day(
            rec.employee_id, current_date
        )

        # ❗ Only first check-in can be late
        if rec.id != first_attendance.id:
            rec.is_late = False
            continue

        # Office start time (example 9:30 AM)
        office_start = datetime.combine(current_date, time(9, 30))

        rec.is_late = check_in_bd > office_start
